<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_book_return_wizard_form" model="ir.ui.view">
        <field name="name">book.return.wizard.form</field>
        <field name="model">book.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Book">
                <group>
                    <group>
                        <field name="member_id"/>
                        <field name="issue_id"/>
                    </group>
                    <group>
                        <field name="return_date"/>
                        <field name="fine_amount"/>
                    </group>
                </group>
                <footer>
                    <button name="action_process_return" string="Confirm Return" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_book_return_wizard" model="ir.actions.act_window">
        <field name="name">Book Return Wizard</field>
        <field name="res_model">book.return.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_wizard_return_book" 
              name="Book Return Wizard" 
              parent="library_management.menu_library_issues" 
              action="action_book_return_wizard" 
              sequence="50"/>
</odoo>