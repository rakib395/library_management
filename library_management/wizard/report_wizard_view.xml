<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_report_wizard_form" model="ir.ui.view">
        <field name="name">library.report.wizard.form</field>
        <field name="model">library.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Report">
                <group>
                    <field name="member_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button name="action_print_excel" string="Print Excel" type="object" class="btn-success"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_library_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Book Issue Card</field>
        <field name="res_model">library.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>