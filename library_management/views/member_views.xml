<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">

            <list decoration-info="status == 'active'" decoration-warning="status == 'expired'">

                <field name="member_number"/>

                <field name="name"/>

                <field name="email"/>

                <field name="phone"/>

                <field name="membership_expiry_date" widget="remaining_days" decoration-danger="membership_expiry_date &lt; current_date"/>

                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-danger="status == 'expired'"/>

            </list>

        </field>
    </record>



    <record id="view_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_renew_membership" 
                            string="Renew Membership" 
                            type="object" 
                            class="btn-primary" 
                            invisible="status == 'active'"/>
                    
                    <field name="status" widget="statusbar"/>
                </header>

                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_issued_books" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="issue_count" string="Issued Books" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="member_number" readonly="1"/></h1>

                        <label for="name" class="oe_edit_only"/>
                        <h2><field name="name" placeholder="Enter Name..."/></h2>
                    </div>

                    <group>
                        <group string="Contact Information">
                            <field name="partner_id"/>
                            
                            <field name="email" widget="email"/>
                            
                            <field name="phone" widget="phone"/>
                        </group>

                        <group string="Membership Details">
                            <field name="membership_start_date"/>
                            
                            <field name="membership_expiry_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Address Details">
                            <field name="address" placeholder="Enter full address..."/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>



    <record id="view_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <field name="member_number"/>

                <filter string="Active Members" name="active_members" domain="[('status', '=', 'active')]"/>
            </search>
        </field>
    </record>

</odoo>